{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"description": "Schema for the agent state",
	"type": "object",
	"title": "AgentState",
	"required": [
		"history",
		"streamed_submissions",
		"streamed_submissions_until_timestamp"
	],
	"properties": {
		"history": {
			"type": "string",
			"description": "Action and result history of the agent",
			"items": {
				"type": "object",
				"required": [
					"model_action",
					"action_result"
				],
				"properties": {
					"model_action": {
						"type": "string",
						"description": "The action taken by the model"
					},
					"action_result": {
						"type": "string",
						"description": "The result of the action"
					}
				}
			}
		},
		"streamed_submissions": {
			"type": "string",
			"description": "The submissions that have been streamed to the state",
			"items": {
				"type": "object",
				"required": [
					"id",
					"timestamp"
				],
				"properties": {
					"id": {
						"type": "string",
						"description": "The id of the submission"
					},
					"timestamp": {
						"type": "string",
						"format": "date-time",
						"description": "The timestamp of the submission"
					}
				}
			}
		},
		"streamed_submissions_until_timestamp": {
			"type": "string",
			"format": "date-time",
			"description": "The timestamp until which submissions have been streamed to the agent state"
		}
	}
}
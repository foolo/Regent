{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"description": "Schema for the agent",
	"type": "object",
	"title": "AgentConfig",
	"required": [
		"name",
		"agent_description",
		"active_on_subreddits",
		"behavior"
	],
	"properties": {
		"name": {
			"type": "string",
			"description": "The name of the agent"
		},
		"agent_description": {
			"type": "string",
			"description": "A description of the agent"
		},
		"active_on_subreddits": {
			"type": "array",
			"description": "The subreddits the agent is active on",
			"items": {
				"type": "string",
				"description": "The name of the subreddit"
			},
			"minItems": 1
		},
		"behavior": {
			"type": "object",
			"description": "The behavior of the agent",
			"required": [
				"max_post_age_for_replying_hours",
				"minimum_time_between_posts_hours"
			],
			"properties": {
				"max_post_age_for_replying_hours": {
					"type": "integer",
					"description": "The maximum age of a post in hours that the agent will reply to."
				},
				"minimum_time_between_posts_hours": {
					"type": "integer",
					"description": "The minimum time since the agent's last posts in hours before it will make another post."
				}
			}
		}
	}
}